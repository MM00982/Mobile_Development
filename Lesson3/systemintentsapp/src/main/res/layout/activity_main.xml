<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ПОЗВОНИТЬ"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/buttonBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ОТКРЫТЬ БРАУЗЕР"
        app:layout_constraintTop_toBottomOf="@id/buttonCall"
        app:layout_constraintStart_toStartOf="@id/buttonCall"
        app:layout_constraintEnd_toEndOf="@id/buttonCall"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttonMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ОТКРЫТЬ КАРТУ"
        app:layout_constraintTop_toBottomOf="@id/buttonBrowser"
        app:layout_constraintStart_toStartOf="@id/buttonBrowser"
        app:layout_constraintEnd_toEndOf="@id/buttonBrowser"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>